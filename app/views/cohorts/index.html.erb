<%= form_for( @item , remote: true) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :start %>
  <%= f.date_field :start %>
  <%= f.label :end %>
  <%= f.date_field :end %>
  <%= f.label :cohort %>
  <%= select_tag "cohort[course_id]", options_from_collection_for_select(Course.all, "id", "name") %>
<% end %>